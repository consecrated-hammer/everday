# Base example file (copy to .env.dev or .env.uat)
APP_ENV=development

# User and group IDs for containers
PUID=1000
PGID=1000

# Timezone
TZ=Australia/Adelaide

# UAT routing
DOMAIN_PRIMARY=example.com
EVERDAY_UAT_SUBDOMAIN=everday-uat
EVERDAY_UAT_HOST=${EVERDAY_UAT_SUBDOMAIN}.${DOMAIN_PRIMARY}

# Shared SQL (fill in per environment)
SQLSERVER_HOST=batserver-sql-<env>
SQLSERVER_PORT=1433
SQLSERVER_DB=Everday
SQLSERVER_LOGIN_NAME=everday_app_login
SQLSERVER_USER=everday_app
SQLSERVER_PASSWORD=ChangeMe

# Local-only overrides for DEV scripts
SQLSERVER_HOST_DEV=127.0.0.1
SQLSERVER_PORT_DEV=14333

# Frontend
VITE_API_BASE_URL=http://<host>:8100/api
VITE_ALLOWED_HOSTS=everday-uat.example.com,everday.example.com,localhost,127.0.0.1

VITE_LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:5183

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/<env>-backend.log
FRONTEND_LOG_FILE_PATH=/app/logs/<env>-frontend.log
LOG_MAX_BYTES=5000000
LOG_BACKUP_COUNT=5
LOG_JSON_ENABLED=false

# Local ports for DEV compose (if you use it)
EVERDAY_API_PORT=8100
EVERDAY_WEB_PORT=5183
