# Base example file (copy to .env.dev)
APP_ENV=development

# Runtime user and timezone
PUID=1000
PGID=1000
TZ=Australia/Adelaide

# Routing
DOMAIN_PRIMARY=example.com
EVERDAY_DEV_SUBDOMAIN=everday-dev
EVERDAY_DEV_HOST=${EVERDAY_DEV_SUBDOMAIN}.${DOMAIN_PRIMARY}

# SQL Server connectivity
SQLSERVER_HOST=batserver-sql-<env>
SQLSERVER_PORT=1433
SQLSERVER_DB=Everday
SQLSERVER_DRIVER="ODBC Driver 18 for SQL Server"

# App CRUD login (least privilege)
SQLSERVER_USER_LOGIN=everday_app
SQLSERVER_USER_PASSWORD=ChangeMe

# Admin login used for migrations
SQLSERVER_ADMIN_LOGIN=batserver-admin
SQLSERVER_ADMIN_PASSWORD=ChangeMe

# Auth
JWT_SECRET_KEY=ChangeMe_Jwt_Secret
JWT_ACCESS_TTL_MINUTES=30
JWT_REFRESH_TTL_DAYS=30
AUTH_PASSWORD_MIN_LENGTH=12
AUTH_LOGIN_MAX_ATTEMPTS=5
AUTH_LOGIN_LOCKOUT_MINUTES=15
AUTH_RESET_TTL_MINUTES=60
APP_PUBLIC_URL=https://${EVERDAY_DEV_HOST}

# Mailgun
SMTP2GO_API_KEY=api-24908A7DBBF74934AC9BBB1589600363
SMTP2GO_BASE_URL=https://api.smtp2go.com/v3
SMTP2GO_SENDER=us@paulfamily.au

# Frontend
VITE_API_BASE_URL=/api
VITE_ALLOWED_HOSTS=everday-dev.example.com,everday.example.com,localhost,127.0.0.1
VITE_LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=https://everday-dev.example.com

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/<env>-backend.log
FRONTEND_LOG_FILE_PATH=/app/logs/<env>-frontend.log
LOG_MAX_BYTES=5000000
LOG_BACKUP_COUNT=5
LOG_JSON_ENABLED=false

# OpenAI (health module)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini
OPENAI_FALLBACK_MODELS=gpt-4.1,gpt-4o-mini
OPENAI_AUTOSUGGEST_MODEL=gpt-5-mini
OPENAI_BASE_URL=https://api.openai.com/v1/chat/completions

# Local ports for DEV compose (if you use it)
EVERDAY_API_PORT=8100
EVERDAY_WEB_PORT=5183
